
<section class='users-list'>
  <% @users.each do |user| %>
    <div class='user-card'>
      <div class='user-img'>
    	<img src= <%= user.photo %> alt= '<%= user.name + ' avatar' %>'/>
      </div>
	  <div class='user-info'>
		<h2 class='user-name'><%= link_to user.name, user %></h2>
		<h3>Number of posts: <%= user.posts_counter%></h3>
	  </div>
    </div>
<% end %>
</section>