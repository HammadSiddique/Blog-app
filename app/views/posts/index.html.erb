<section class='all-posts-of-user'>
    <%= render 'shared/user/user' %>

    <div class='post-redirection'>
      <%= link_to 'Create a new post', new_user_post_path %>
    </div>
    <% @posts.each do |post| %>
    <div class='post-card'>
      <div class='post-info'>
		    <h3 class='post-title'><%= link_to post.title, user_post_path(@user.id, post) %></h3>
		    <p><%= post.text %></p>
		    <div class='likes-comments'>
		      <p>Comments: <%= post.comments_counter%> </p>
		      <p>Likes: <%= post.likes_counter%> </p>
		    </div>
      </div>
	  </div>
      <div class='comments-container'>
        <% post.recent_comments.each do |comment| %>
          <p> <%= User.find(comment.user_id).name %>: <%= comment.text %></p>
        <% end %>
      </div>
    <% end %>
    <button>Pagination</button>
</section>