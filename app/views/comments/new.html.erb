<section class='comments-form-container'>
  <h3> Add a comment: </h3>
  <%= form_with model: Comment, url: user_post_comments_url, class: 'comments-form', method: :post do |form| %>
  <div class='add-comment'>
    <%= form.label :text, 'Comment'%>
    <%= form.text_area :text %>
  </div>
  <%= form.submit 'Add comment', class: 'submit-comment' %>
  <% end %>
</section>